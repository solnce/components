    "jest-environment-jsdom": "^28.1.3",
    "prettier": "^2.7.1",
    "secretlint": "^5.2.3",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-prettier": "^2.0.0",
    "ts-jest": "^28.0.5",
    "tsconfig-paths-webpack-plugin": "^3.5.2"
  },
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "stylelint": "stylelint --ignore-path .gitignore \"components/**/*.+(css|ts|tsx)\"",
    "lint-fix": "eslint --cache --fix ./components && prettier --write ./components",
    "lint": "eslint --cache ./components",
    "secretlint": "secretlint '**/*'",
    "test": "jest"
  },
  "eslintIgnore": [
    "/.eslintrc.js"
  ],
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(xxxx.*?\\.js$))"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {
      "^@atoms/(.*)": "<rootDir>/components/atoms/$1",
      "^@styles$": "<rootDir>/components/const/styles.ts"
    },
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"]
  }
}
