{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "target": "es2016",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@atoms/*": ["./src/components/atoms/*"],
      "@molecules/*": ["./src/components/molecules/*"],
      "@styles": ["./src/components/const/styles.ts"],
    },
  },
  "include": [
    "./src/components/**/*",
    "./jest.setup.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
